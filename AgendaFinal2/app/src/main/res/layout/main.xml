<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:weightSum="1">
    <TextView
        android:color="#040005"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/TituloApp"
        android:gravity="center"
        android:layout_marginTop="15dip"
        android:keepScreenOn="true"
        android:textSize="20sp"
        android:textColor="#FCFCFC"/>
    <LinearLayout android:layout_width="fill_parent"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

    <Button android:id="@+id/boton_nota"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:text="@string/Evento_Calendario"></Button>

    <Button android:text="@string/Listado"
        android:id="@+id/button3"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_gravity="center"></Button>

    <Button android:text="@string/AcercaDe"
        android:id="@+id/button1"
        android:layout_height="40dp"
        android:layout_width="150dp"
        android:layout_gravity="center"></Button>

        <TextView android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="10dp"
            android:text="Delmia Note"
            android:textColor="#FCFCFC"
            android:gravity="left|right"
            android:layout_gravity="right"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="180dp"></TextView>
    </LinearLayout>

</LinearLayout>
